local_dashboard=/etc/QuickBox/themes

rm -rf /srv/rutorrent/home/db/.defaulted.lock >/dev/null 2>&1
cp -r ${local_dashboard}/smoked/. /srv/rutorrent/home
printf "" > /srv/rutorrent/home/db/.smoked.lock

#box upgrade

service apache2 reload
